<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/divide"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/multiply"
        android:layout_alignTop="@+id/equal"
        android:text="/"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="272dp"
        android:layout_alignLeft="@+id/multiply" />

    <Button
        android:id="@+id/equal"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nine"
        android:layout_alignStart="@+id/nine"
        android:layout_alignTop="@+id/zero"
        android:text="="
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="272dp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subtract"
        android:layout_alignStart="@+id/subtract"
        android:layout_alignTop="@+id/nine"
        android:text="*"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="272dp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/eight"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:text="9"
        tools:layout_editor_absoluteX="303dp"
        tools:layout_editor_absoluteY="272dp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eight"
        android:layout_alignStart="@+id/eight"
        android:layout_alignTop="@+id/clear"
        android:text="0"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/five"
        android:layout_alignStart="@+id/five"
        android:layout_alignTop="@+id/seven"
        android:text="8"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add"
        android:layout_alignTop="@+id/six"
        android:text="-"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="340dp"
        android:layout_alignLeft="@+id/add" />

    <Button
        android:id="@+id/six"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three"
        android:layout_alignTop="@+id/five"
        android:text="6"
        tools:layout_editor_absoluteX="303dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/five"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/two"
        android:layout_alignStart="@+id/two"
        android:layout_alignTop="@+id/four"
        android:text="5"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/three"
        android:layout_marginEnd="25dp"
        android:text="+"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="412dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp" />

    <Button
        android:id="@+id/three"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/two"
        android:layout_marginEnd="119dp"
        android:layout_marginRight="119dp"
        android:text="3"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/two"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/one"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:text="2"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seven"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/seven"
        android:layout_marginBottom="70dp"
        android:text="CLEAR"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="489dp" />

    <Button
        android:id="@+id/seven"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/four"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/four"
        android:layout_marginBottom="142dp"
        android:text="7"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="489dp" />

    <Button
        android:id="@+id/four"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/one"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/one"
        android:layout_marginBottom="227dp"
        android:text="4"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="489dp" />

    <Button
        android:id="@+id/one"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textviewcontrol"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textviewcontrol"
        android:layout_marginTop="206dp"
        android:text="1"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="489dp" />

    <TextView
        android:id="@+id/textviewcontrol"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="117dp" />

    <TextView
        android:id="@+id/textviewdisplay"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="161dp" />
</RelativeLayout>